{
  "name": "3waNetflix",
  "action": {},
  "manifest_version": 3,
  "author": "羽山秋人 (https://3wa.tw)",
  "version": "2.0",
  "description": "讓 netflix 的字幕稍微調大一點",
  "content_security_policy": {

  },
  "host_permissions": [
    "https://3wa.tw/*",
    "https://*.netflix.com/*"
  ],
  "optional_host_permissions": [
    "*://*/*"
  ],
  "permissions": [    
    "scripting"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
